---
import Card from '../Card.astro'
import { Button } from '../ui/button'
import { EXPERIENCE } from '../../lib/constants'
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
  useTranslatedExperience,
} from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)
const getExperience = useTranslatedExperience(lang)
---

<Card
  colSpan="md:col-span-1"
  rowSpan="md:row-span-2"
  title={t('experience.title')}
>
  <div class="mt-2 space-y-4">
    {
      EXPERIENCE.slice(0, 3).map((exp) => {
        const translatedExp = getExperience(exp.id)
        if (!translatedExp) return null
        return (
          <div>
            <h3 class="text-lg font-semibold">{translatedExp.position}</h3>
            <a class="text-sm text-primary" href={exp?.link ?? ''}>
              {translatedExp.company}
            </a>
            <p class="text-sm text-gray-600">
              {exp.start} -{' '}
              {exp.end === 'Current' ? translatedExp.current : exp.end}
            </p>
          </div>
        )
      })
    }
    <a href={translatePath('/work')}>
      <Button variant="link" className="pl-0">{t('experience.viewMore')}</Button
      >
    </a>
  </div>
</Card>
